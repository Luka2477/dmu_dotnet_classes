<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="task4.MainWindow"
        Title="task4">
    <Grid ShowGridLines="True" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" Name="ButtonHello" Foreground="Green" IsVisible="False">Hello</Button>
        <CheckBox Grid.Column="1" Name="CheckBoxHello" Click="CheckBox_Clicked">Show Button</CheckBox>
    </Grid>
</Window>
