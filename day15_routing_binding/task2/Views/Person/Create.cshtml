@model PersonModel

@{
    ViewData["Title"] = "Create Person";
}

<div>
    @using (Html.BeginForm("Create", "Person", HttpMethod.Post))
    {
        @Html.LabelFor(p => p.Name.First)
        @Html.EditorFor(p => p.Name.First)
        <br/>
        @Html.LabelFor(p => p.Name.Last)
        @Html.EditorFor(p => p.Name.Last)
        <br/>
        @Html.LabelFor(p => p.Age)
        @Html.EditorFor(p => p.Age)
        <br/>
        <button type="submit">Create</button>
    }
</div>
